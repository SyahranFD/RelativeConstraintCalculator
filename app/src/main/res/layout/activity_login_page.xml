<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <ImageView
        android:id="@+id/polygonTopLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/polygon_top_left"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/polygonTopRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/polygon_top_right"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/polygonBottomLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/polygon_bottom_left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/polygonBottomRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/polygon_bottom_right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_login"
        android:layout_below="@id/polygonTopLeft"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>

    <ImageView
        android:id="@+id/imgPerson"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/imgLogo"
        android:layout_toStartOf="@id/edUsername"
        android:src="@drawable/ic_baseline_person_24" />

    <EditText
        android:id="@+id/edUsername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="username"
        android:layout_below="@id/imgLogo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_rectangle_blue"
        android:textColorHint="#778899"
        android:textColor="#496B8F"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/imgLock"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/edUsername"
        android:layout_toStartOf="@id/edUsername"
        android:src="@drawable/ic_baseline_lock_24" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_below="@id/edUsername"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_rectangle_blue"
        android:textColorHint="#778899"
        android:textColor="#496B8F"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Login"
        android:layout_below="@id/edPassword"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:backgroundTint="#191970" />

    <ImageView
        android:id="@+id/imgFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/facebook_color_svgrepo_com"
        android:layout_above="@id/polygonBottomRight"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"/>

    <ImageView
        android:id="@+id/imgGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/google_color_svgrepo_com"
        android:layout_above="@id/polygonBottomRight"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:layout_toStartOf="@id/imgFacebook" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/twitter_color_svgrepo_com"
        android:layout_above="@id/polygonBottomRight"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:layout_toEndOf="@id/imgFacebook"/>

    <TextView
        android:id="@+id/txtOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        android:layout_above="@id/imgFacebook"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"/>

    <ImageView
        android:id="@+id/line_left"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/line_grey"
        android:layout_above="@id/imgFacebook"
        android:layout_toStartOf="@id/txtOr"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="24dp"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/line_grey"
        android:layout_above="@id/imgFacebook"
        android:layout_toEndOf="@id/txtOr"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"/>

</RelativeLayout>